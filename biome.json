{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*", "!**/dist/**", "!**/docs/**", "!**/node_modules/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "includes": ["**/*.ts"],
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
